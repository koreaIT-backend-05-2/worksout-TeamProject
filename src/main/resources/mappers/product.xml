	<select id="getProduct" parameterType="hashmap"
	resultMap="product">
		SELECT
			pm.product_code,
			pm.product_brand,
			pm.product_kind,
			pm.product_name,
			pm.product_price,
			pm.product_amount,
			pm.product_size,
			pf.file_code,
			pf.file_name
		FROM
			product_mst pm
			LEFT OUTER JOIN product_img_file pf ON(pf.product_code = pm.product_code)
		WHERE
		<choose>
			<when test='flag == null'>
				pm.product_code = #{product_code}	
			</when>
			<when test='flag.equals("pre")'>
				pm.product_code = (
					select
						max(product_code)
					from
						product_mst
					where
						product_code &lt; #{product_code}
				)			
			</when>
			<otherwise>
				pm.product_code = (
					select
						min(product_code)
					from
						product_mst
					where
						product_code &gt; #{product_code}
				)
			</otherwise>
		</choose>
	</select>
	
	<delete id="deleteProduct" parameterType="integer">
		delete
		from
			product_mst
		where
			product_code = #{product_code}
	</delete>
	
